    "version": "0.2.0",
    "configurations": [
		{
			"name": "Client",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
        {
            "type": "node",
            "request": "launch",
            "name": "Dev",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["dev"],
            "cwd": "${workspaceFolder}"
        }
    ],
	"compounds": [
		{
			"name": "Launch Dev",
			"configurations": ["Client", "Dev"],
			"stopAll": true
		}
	]
}
